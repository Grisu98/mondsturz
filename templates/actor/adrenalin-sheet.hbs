<form class="{{cssClass}} {{actor.type}} mondsturz" autocomplete="off">
    <nav class="sheet-tabs tabs" data-group="adrin">
        <a class="" data-tab="settings">Einstellungen</a>
        <a class="" data-tab="adrenalin">Adrenalin</a>
    </nav>

    <section class="sheet-body">

        <div class="tab" data-group="adrin" data-tab="settings">
            <div>
                <h3>Diverse Skills hinzuf√ºgen:</h3>

                <table class="">
                    <tr>
                        <th style="text-align: left;">Name</th>
                        <th>
                            <a class="talent-create" title="Neues erstellen" data-type="talent"><i
                                    class="fas fa-plus"></i></a>
                        </th>
                    </tr>

                    {{#each object.system.talente as |value key|}}
                    {{#if (isSame value.talentKey "diverse1")}}
                    <tr class="item item-header" data-item-id="{{this._id}}">
                        <td>
                            <input class="talent-input" value="{{value.label}}" name="system.talente.{{key}}.label" />
                        </td>
                        <td class="talent-controls" data-div-key="{{key}}">
                            <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/if}}
                    {{/each}}
                </table>
            </div>
            <br>
            <br>
            <div>
                <h3>Errechnete Werte:</h3>

                <table class="">
                    {{#each system.misc.spentAttr as |value key|}}
                    {{#unless (eq key "alle")}}
                    <tr class="item item-header">
                        <td>
                            {{key}}
                        </td>
                        <td>
                            {{value}}
                        </td>
                    </tr>
                    {{/unless}}
                    {{/each}}
                    <tr class="spent-attr-tr">
                        <td>
                            Zusammengerechnet:
                        </td>
                        <td >
                            {{system.misc.spentAttr.alle}}
                        </td>
                    </tr>
                </table>
                <br>
                <table>
                    <tr>
                        <td>Talentpunkte</td>
                        <td>{{system.misc.spentTal}}</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="tab" data-group="adrin" data-tab="adrenalin">
            <table>
                <tr>
                    <th style="width: 5%;"></th>
                    <th style="text-align: left; padding-left: 5px">Aktion</th>
                    <th>Effekt</th>
                    <th style="text-align: right; padding-right: 5px">Kosten</th>
                </tr>
                {{#each adrenalin as |pValue pKey|}}
                <tr>
                    <td colspan="4">
                        <div class="table">

                            {{#each pValue as |cValue cKey|}}

                            <div class="row">
                                <div class="cell"><input type="checkbox" name="system.misc.adrenalin.{{pKey}}.{{cKey}}"
                                        {{checked (dumb pKey cKey @root.system.misc.adrenalin)}}></div>
                                {{!-- didnt get the checked to work otherwise and cant bothered be so handlebar
                                helper... --}}
                                <div class="cell">{{cValue.label}}</div>
                                <div class="cell">{{cValue.effekt}}</div>
                                <div class="cell">{{cValue.kosten}}</div>
                            </div>

                            {{/each}}

                        </div>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>


    </section>
</form>